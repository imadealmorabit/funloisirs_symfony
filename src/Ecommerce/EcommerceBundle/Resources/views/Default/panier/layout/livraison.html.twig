{% extends "::layout/layout.html.twig" %}
{% block body %}



<section id="main">
        
            <div class="header-page bg-scroll m-bottom-0" style="background-image:url(assets/img/bg/2.jpg) ">

                <div class="container">

                    <div class="header-page__account">
                        
                        <div class="header-page__account-avatar">

                            <img src="assets/img/author-avatar/4.jpg" alt="">

                            <h4 class="header-page__account-name">Brian Bennett</h4>
                        
                            <span class="member-item__role role--admin">
                                <i class="fa fa-gitlab"></i> Administrator
                            </span>

                        </div>

                        <div class="account-subscribe">

                            <span class="followers"><span class="count">13</span> Followers</span>

                            <span class="following"><span class="count">10</span> Following</span>

                            <a href="#" class="listgo-btn listgo-btn--sm">Follow <i class="fa fa-rss"></i></a>
                        </div>
                        
                    </div>

                </div>

                <div class="overlay" style="background-color: rgba(0,108,255, 0.6)"></div>

            </div>

            <div class="section p-top-0 p-bottom-0">
                <div class="container">

                    <div class="account-nav">

                        <span class="account-nav__toggle">
                            <i class="fa fa-bars"></i> Dashboards
                        </span>

                        <ul class="account-nav__menu">
                            <li><a href="#"><i class="icon_id"></i> Profile</a></li>
                            <li><a href="#"><i class="icon_documents_alt"></i> My listings (20)</a></li>
                            <li><a href="#"><i class="icon_lightbulb_alt"></i> Notifications (20)</a></li>
                            <li><a href="#"><i class="icon_heart_alt"></i> Favourites (12)</a></li>
                            <li class="active"><a href="#"><i class="icon_creditcard"></i> Billing Details</a></li>
                            <li class="menu-item-has-children"><a href="#">
                                <i class="icon_creditcard"></i> Cart</a>
                                <ul class="submenu">
                                    <li><a href="#">My Order</a></li>
                                    <li><a href="#">My Checkout</a></li>
                                </ul>
                            </li>
                        </ul>
                        <div class="account-nav__addlisting">
                            <a href="#" class="listgo-btn btn-primary listgo-btn--sm listgo-btn--round">+ Add Listing</a>
                        </div>

                    </div>

                </div>
            </div>

            <div class="section" style="background-color: #f5f5f5">
                
                <div class="container">
                    
                    <div class="row">


                    <div class="col-lg-4">
                         {% if utilisateur.adresses|length != 0 %}
                        <form action="{{ path('validation') }}" method="POST">
                            
                            <h4>Adresse de livraison</h4>
                            {% for adresse in utilisateur.adresses %}
                            <label class="radio">
                                <input type="radio" name="livraison" value="{{ adresse.id }}" {% if loop.index0 == 0 %}checked="checked"{% endif %}>
                                {{ adresse.adresse }}, {{ adresse.cp }} {{ adresse.ville }} - {{ adresse.pays }} <a href="{{ path('livraisonAdresseSuppression', { 'id' : adresse.id }) }}"><i class="icon-trash"></i></a>
                                <br />{{ adresse.prenom }} {{ adresse.nom }}
                            </label>
                            {% endfor %}
                            
                            <br /><br />
                            
                            <h4>Adresse de facturation</h4>
                            {% for adresse in utilisateur.adresses %}
                            <label class="radio">
                                <input type="radio" name="facturation" value="{{ adresse.id }}" {% if loop.index0 == 0 %}checked="checked"{% endif %}>
                                {{ adresse.adresse }}, {{ adresse.cp }} {{ adresse.ville }} - {{ adresse.pays }} <a href="{{ path('livraisonAdresseSuppression', { 'id' : adresse.id }) }}"><i class="icon-trash"></i></a>
                                <br />{{ adresse.prenom }} {{ adresse.nom }}
                            </label>
                            {% endfor %}
                            
                            <br />
                            
                            <button class="btn btn-primary">Valider mes adresses</button>
                        </form>
                        {% endif %}
                    </div>



                
                        <div class="col-lg-8">
                        
                            <h2 class="author-page__title">
                                <i class="fa fa-credit-card"></i>
                                Ajouter une nouvelle Adresse
                            </h2>

                        <form action = "{{path('livraison')}}" method = "POST">
                    

                            <div class="account-page">

                                <div class="form form--profile">
                                   
                                    <div class="row">

                                        <div class="col-sm-6">
                                            {{ form_row(form.nom) }}
                                        </div>
                                

                                  

                                        <div class="col-sm-6">
                                            {{ form_row(form.prenom) }}
                                        </div>
                                     </div>
                                     <br>

               
                                      
                                    <div class="row">

                                        <div class="col-sm-6">
                                            {{ form_row(form.telephone) }}
                                        </div>
                                

                                  

                                        <div class="col-sm-6">
                                            {{ form_row(form.adresse) }}
                                        </div>
                                     </div>
                                     <br>

                                    

                                    <div class="row">

                                        <div class="col-sm-6">
                                            {{ form_row(form.pays) }}
                                        </div>
                                

                                  

                                        <div class="col-sm-6">
                                            {{ form_row(form.ville) }}
                                        </div>
                                     </div>
                                     <br>
                                     <div class="row">

                                        <div class="col-sm-6">
                                            {{ form_row(form.cp) }}
                                        </div>
                                

                                  

                                        <div class="col-sm-6">
                                            {{ form_row(form.complement) }}
                                        </div>
                                     </div>
                                     <br>

                                    
                                

    

                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-6">
                                            <div class="profile-actions">
                                                <input type="submit" class="listgo-btn listgo-btn--sm" value="Ajouter">
                                            </div>
                                        </div>
                                    </div>

                                </div>

                            </div>

                         {{form_end(form)}}

                        </div>
                
                    </div>
                
                </div>

            </div>

        </section>


{% endblock %}